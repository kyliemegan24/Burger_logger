<div class="heading-part">
<h1>Burgers!</h1>
<div id='main-img'><img src="/images/burgey.png" alt="burger truck with a happy burger on the top"></div>
</div>
<div class="ordering">
<h2>Order a burger</h2>



<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of Burger:</label>
    <input type="text" id="burger-input" name="name">
  </div>

  {{!-- <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

  <button type="submit">Order burger</button>
</form>

</div>

<h2>Burgers Waiting to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li class="list-item">
          {{id}}. {{burger_name}}
          <button type="submit" class="u-pull-right devour-btn" data-id="{{id}}" data-devoured={{devoured}}>
          Devour</button>
        </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that Have Been Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
       <li class="list-item">
          {{id}}. {{burger_name}}
        </li>
    {{/if}}
  {{/each}}
</ul>



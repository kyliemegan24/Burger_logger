<h1>Cats!</h1>

<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  {{!-- <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

  <button type="submit">Order burger</button>
</form>

<h2>Burgers Waiting to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that Have Been Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>


